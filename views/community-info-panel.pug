div.grid.auto-rows-min.bg-stone-100.rounded-sm.h-min.mb-10
    div.h-12.bg-gradient-to-r.from-teal-400.to-teal-800.rounded-t-sm
    div.flex.justify-between.items-center.p-4
        div.flex.gap-4.items-center
            img(src="/uploads/"+community.profilepic+".png", class="w-12 h-12 rounded-full")
            div.text-xl r/#{community.name}
        if (community.moderators.includes(currentUser._id.toString()))
            a: svg(xmlns="http://www.w3.org/2000/svg", width="24", height="24", viewBox="0 0 24 24", fill="none", stroke="#14b8a6", stroke-width="2", stroke-linecap="round", stroke-linejoin="round")
                    circle(cx="12", cy="12", r="3")
                    path(d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z")
    div.grid.gap-4.px-4
        div= community.description
        div.text-lg Member count: #{community.memberCount}
        div.flex.gap-2.items-center
            svg(xmlns="http://www.w3.org/2000/svg", width="24", height="24", viewBox="0 0 24 24", fill="none", stroke="#000000", stroke-width="2", stroke-linecap="round", stroke-linejoin="round")
                rect(x="3", y="4", width="18", height="18", rx="2", ry="2")
                line(x1="16", y1="2", x2="16", y2="6")
                line(x1="8", y1="2", x2="8", y2="6")
                line(x1="3", y1="10", x2="21", y2="10")
            div Created
            div= new Date(community.created_at).toDateString().split(' ').slice(1).join(' ')
        if (currentUser)
            if (currentUser.communities.includes(community._id.toString()))
                form(action="/r/"+community.name+"/leave" method="post")
                    btn.btn.btn-accent.btn-outline.normal-case.btn-block.rounded-full.text-lg(type="submit") Joined
                script.
                    const joinbtn = document.querySelector('form[action$="leave"]>btn');
                    joinbtn.onmouseover = () => joinbtn.textContent = 'Leave';
                    joinbtn.onmouseleave = () => joinbtn.textContent = 'Joined';
            else
                a.btn.btn-accent.normal-case.btn-block.rounded-full.text-white.text-lg(href="/r/"+community.name+"/join") Join
            a.btn.btn-accent.normal-case.btn-block.rounded-full.text-white.text-lg.mb-5(href="/r/"+community.name+"/submit") Create post