doctype html
html(lang="en", data-theme="light")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/stylesheets/output.css")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,300..400,0..1,0")
        link(rel="shortcut icon", href="/images/turbine-icon.png", type="image/x-icon")
        title Bellspace
        block styles

    body(class="grid grid-rows-[min-content_1fr] grid-cols-1 md:grid-cols-[1fr_3.5fr]")
        div(class="z-20 col-span-3 h-min shadow-lg"): include ./header.pug
        div(class="overflow-y-hidden hidden md:block"): include ./sidebar.pug
        div(class="overflow-y-hidden"): block main-content
        script(type="application/javascript", src="/javascripts/script.js")